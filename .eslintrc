{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "es5"
    }],
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": [
          "test/**/*.js",
          "**/*.test.js",
          "**/*.spec.js",
          "**/ts-types-tester.js"
        ]
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}
